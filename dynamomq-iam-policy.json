{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:Query",
                "dynamodb:GetItem",
                "dynamodb:BatchGetItem",
                "dynamodb:Scan",
                "dynamodb:DeleteItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:BatchWriteItem",
                "dynamodb:TransactWriteItems",
                "dynamodb:DescribeTable",
                "dynamodb:CreateTable"
            ],
            "Resource": [
                "arn:aws:dynamodb:<region>:<account-id>:table/dynamo-mq-table",
                "arn:aws:dynamodb:<region>:<account-id>:table/dynamo-mq-table/index/dynamo-mq-index-queue_type-queue_add_timestamp"
            ]
        }
    ]
}
